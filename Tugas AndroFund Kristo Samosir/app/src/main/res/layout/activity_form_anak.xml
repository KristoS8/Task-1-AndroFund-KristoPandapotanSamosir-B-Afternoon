<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormAnak"
    android:background="@drawable/img"
    >

    <EditText
        android:id="@+id/editNama"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:hint="Masukkan Nama"
        android:padding="20dp"
        android:textColorHint="#6c757d"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <EditText
        android:id="@+id/editUmur"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:hint="Masukkan Umur"
        android:padding="20dp"
        android:textColorHint="#6c757d"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNama" />

    <EditText
        android:id="@+id/editBerat"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:hint="Masukkan Berat Badan"
        android:padding="20dp"
        android:textColorHint="#6c757d"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editUmur" />
        />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Confirm"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editBerat"
        android:backgroundTint="#007FAC"
        />


</androidx.constraintlayout.widget.ConstraintLayout>