<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/img"
    >

    <RelativeLayout
        android:id="@+id/containerFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundimageview2" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ini adalah textview"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#1d2d44"
        android:background="@drawable/radius"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

    <Button
        android:id="@+id/back"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="back To Form"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:backgroundTint="#007FAC"
        />

    <Button
        android:id="@+id/gelap"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Dark mode"
        android:textStyle="bold"
        android:layout_marginEnd="180dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back"
        android:backgroundTint="#007FAC"/>

    <Button
        android:id="@+id/terang"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Light mode"
        android:textStyle="bold"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back"
        android:backgroundTint="#007FAC"/>




</androidx.constraintlayout.widget.ConstraintLayout>